<ci:ActionSettingsControlBase
      x:Class="ClassIsland.Controls.ActionSettingsControls.BroadcastSignalActionSettingsControl"
      x:TypeArguments="triggers:SignalTriggerSettings"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ClassIsland.Controls.ActionSettingsControls"
      xmlns:ci="http://classisland.tech/schemas/xaml/core"
      xmlns:triggers="clr-namespace:ClassIsland.Models.Automation.Triggers"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800">
    <Grid DataContext="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType=local:BroadcastSignalActionSettingsControl}}">
        <TextBox Text="{Binding Settings.SignalName}"/>
    </Grid>
</ci:ActionSettingsControlBase>
